
set nocompatible

" vimwiki settings
let g:vimwiki_list = [{'path': '~/Dropbox/vimwiki/', 'syntax': 'markdown', 'ext': '.md'}]

" bootstrap pathogen & submodules
runtime bundle/pathogen/autoload/pathogen.vim
execute pathogen#infect()
filetype plugin indent on

" moving around, searching and patterns
set incsearch
set ignorecase
set smartcase

" displaying text
set scrolloff=2
set number

" make tabs visible
set list
set listchars=tab:Â»\  

" syntax, highlighting and spelling
syntax on
colorscheme molokai
set hlsearch
set cursorline

" multiple tab pages
set showtabline=2

" terminal
set title
set ttyfast

" messages and info
set ruler
set showcmd

" editing text
set showmatch
set backspace=indent,eol,start

" mapping
map <Space> :noh<CR>
map <Leader>a :tabnext<CR>
map <Leader>z :tabprevious<CR>

" command line editing
set wildmenu
set wildmode=longest:full

